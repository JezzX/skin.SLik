					<align>left</align>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Label]</label>
				</control>
			</focusedlayout>
		</control>
	</include>
	<include name="AlbumSongsFanartView_Extras">
		<control type="group">
			<visible>Control.IsVisible(55)</visible>
			<animation effect="fade" time="600" delay="400">Visible</animation>
